extends ../node_modules/jade-bootstrap/_bootstrap

append styles
    link(rel="stylesheet" href="stylesheets/design.css")

block body
    .container
        .navigation
            +navbar("Colenso Project", "dropdown_menu")
                +nav_item("/") Home
                    +icon("home")
                +nav_item_dropdown("#")(label="Database")
                    +nav_item("/explore") Explore
                        +icon("list-alt")
                    +nav_item("/database", "active") Search Database
                        +icon("book")
        .content
            h1= title
            .hr
                hr
            form(name="query", action="/database", method="get")
                +input("text","query","Search Colenso database", "",name="databaseSearch")
                +submit("Search")
                br
                .hr
                    hr
                br
                each doc in results
                    p: a(href = "/file?filename=/" + doc) !{doc}